<%= form_with model: todo do |f| %>
  <% if todo.errors.any? %>
    <div>
			<div class="alert alert-danger" role="alert"> Errors were found in the data provided </div>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

	<div class="input-group mb-3">
		<div class="input-group-prepend">
			<span class="input-group-text" style="height:52px">
				<div class="form-check-inline" style="margin-right: 0;">
					<%= f.check_box :complete, class: "form-check-input" %>
				</div>
			</span>
		</div>

		<%= f.text_field :title, class: "form-control" %>

		<div class="input-group-append">
			<span class="input-group-text">
				<%= f.collection_select :user_id, User.all, :id, :name, {}, { class: "form-control" } %>
			</span>
		</div>
	</div>

  <div class="form-group">
		<%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
